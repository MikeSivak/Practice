<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <br>
      <select class="form-control" title="Select Brand">
        <option disabled selected>Brand</option>
      </select>
    </div>
    <br>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Model">
        <option disabled selected>Model</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Body">
        <option disabled selected>Body</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Fuel">
        <option disabled selected>Fuel</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Drive">
        <option disabled selected>Drive</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Cylinders">
        <option disabled selected>Cylinders</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Engine Type">
        <option disabled selected>Engine Type</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Engine Volume">
        <option disabled selected>Engine Volume</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <div class="custom-file-input">
        <input id="attach" type="button" value="Upload picture">
        <input type="file">
        <input id="txt" type="text">
      </div>
    </div>
    <div class="form-group col-md-6">
      <input type="text" class="form-control" title="Enter Price" placeholder="Enter Price">
    </div>
    <div class="form-group col-md-6">
      <input type="number" class="form-control" title="Enter Year" placeholder="Enter Year">
    </div>
    <div class="form-group col-md-6">
      <textarea class="form-control" title="Write a car description" style="resize: none; height:131px; margin-top:-48px"
        placeholder="Write Description"></textarea>
    </div>
    <div class="form-group col-md-6">
      <select class="form-control" title="Select Fuel Index">
        <option disabled selected>Fuel Index</option>
      </select>
    </div>
    <div class="form-group col-md-6">
      <input type="text" class="form-control" title="Enter Hp" placeholder="Enter Hp">
    </div>
  </div>

  <div id="add_but">
    <button id="add" type="submit" class="btn btn-info">Add a new car</button>
  </div>

</form>
<div class="down-div">

</div>

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script>
  $(document).ready(function () {
    $('.custom-file-input input[type="file"]').change(function (e) {
      $(this).siblings('input[type="text"]').val(e.target.files[0].name);
    });
  });
</script>