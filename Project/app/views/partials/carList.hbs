<div>
  <ul class="list-group">
    {{#each cars}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <img class="mini-pic" src="/img/auto/{{this.picture_link}}" alt="Card image cap">
      <a id="link-item" href="/content/{{this.id}}">
        <label class="brand_label">{{'car_model.car_brand.brand_name'}}</label>
        <label class="model_label"> {{'car_model.model_name'}}</label>
        <label class="cylinders_label">
          {{'car_cylinder.cylinders_marking'}}{{'car_cylinder.cylinders_count'}}</label>
        <label class="volume_label"> - {{'engine_volume.volume'}}</label>
        <label class="body_label">({{'car_body.body_name'}},</label>
        <label class="fuel_label">{{'car_fuel.fuel_name'}},</label>
        <label class="drive_label"> {{'car_drive.drive_name'}} привод)</label>
      </a>
      <span style="width: 50px; height:50px; padding:15px 10px; background-color:#f7c552; color:black; font-size:20px"
        class="badge badge-primary badge-pill">{{this.quantity}}</span>
    </li>
      <form method="POST">
        <input id="hidden-id-car" name="id" value="{{this.id}}" type="hidden">
        <button id="del_but" type="submit" formaction="/admin/delete" class="btn btn-info">Delete</button>
      </form>
    {{/each}}
  </ul>
</div>